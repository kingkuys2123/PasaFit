<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".Registration">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageViewLabelRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="96dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/pasafit_label" />

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingLeft="32dp"
                android:paddingRight="32dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageViewLabelRegister">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/register_message"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="32dp"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/input_border_first_name"
                        android:textColorHint="@color/sea_green"
                        app:boxBackgroundMode="filled"
                        app:boxStrokeColor="@android:color/transparent"
                        app:endIconMode="clear_text"
                        app:endIconTint="@color/white"
                        app:hintTextColor="@color/sea_green"
                        app:startIconCheckable="true"
                        app:startIconDrawable="@drawable/system_regular_8_account"
                        app:startIconTint="@color/white">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editTxtFirstNameRegister"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:backgroundTint="@android:color/transparent"
                            android:drawableTint="@color/sea_green"
                            android:hint="@string/enter_first_name"
                            android:inputType="textPersonName"
                            android:textColor="@color/white"
                            android:textColorHighlight="@color/sea_green" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/input_border_last_name"
                        android:textColorHint="@color/sea_green"
                        app:boxBackgroundMode="filled"
                        app:boxStrokeColor="@android:color/transparent"
                        app:endIconMode="clear_text"
                        app:endIconTint="@color/white"
                        app:hintTextColor="@color/sea_green"
                        app:startIconCheckable="true"
                        app:startIconTint="@color/white">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editTxtLastNameRegister"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:backgroundTint="@android:color/transparent"
                            android:drawableTint="@color/sea_green"
                            android:hint="@string/enter_last_name"
                            android:inputType="textPersonName"
                            android:textColor="@color/white"
                            android:textColorHighlight="@color/sea_green" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/input_border"
                    android:textColorHint="@color/sea_green"
                    app:boxBackgroundMode="filled"
                    app:boxStrokeColor="@android:color/transparent"
                    app:endIconMode="clear_text"
                    app:endIconTint="@color/white"
                    app:hintTextColor="@color/sea_green"
                    app:startIconCheckable="true"
                    app:startIconDrawable="@drawable/system_regular_59_email"
                    app:startIconTint="@color/white">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editTxtUsernameRegister"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:backgroundTint="@android:color/transparent"
                        android:drawableTint="@color/sea_green"
                        android:hint="@string/enter_username"
                        android:inputType="text"
                        android:textColor="@color/white"
                        android:textColorHighlight="@color/sea_green" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/input_border"
                    android:textColorHint="@color/sea_green"
                    app:boxBackgroundMode="filled"
                    app:boxStrokeColor="@android:color/transparent"
                    app:endIconMode="clear_text"
                    app:endIconTint="@color/white"
                    app:hintTextColor="@color/sea_green"
                    app:startIconCheckable="true"
                    app:startIconDrawable="@drawable/system_regular_191_mail_envelope_close"
                    app:startIconTint="@color/white">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editTxtEmailRegister"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:backgroundTint="@android:color/transparent"
                        android:drawableTint="@color/sea_green"
                        android:hint="@string/enter_email"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/white"
                        android:textColorHighlight="@color/sea_green" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/input_border"
                    android:textColorHint="@color/sea_green"
                    app:boxBackgroundMode="filled"
                    app:boxStrokeColor="@android:color/transparent"
                    app:endIconMode="password_toggle"
                    app:endIconTint="@color/white"
                    app:hintTextColor="@color/sea_green"
                    app:startIconCheckable="true"
                    app:startIconDrawable="@drawable/system_regular_90_lock_closed"
                    app:startIconTint="@color/white">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editTxtPasswordRegister"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:backgroundTint="@android:color/transparent"
                        android:drawableTint="@color/sea_green"
                        android:hint="@string/enter_password"
                        android:inputType="textPassword"
                        android:textColor="@color/white"
                        android:textColorHighlight="@color/sea_green" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/input_border"
                    android:textColorHint="@color/sea_green"
                    app:boxBackgroundMode="filled"
                    app:boxStrokeColor="@android:color/transparent"
                    app:endIconMode="password_toggle"
                    app:endIconTint="@color/white"
                    app:hintTextColor="@color/sea_green"
                    app:startIconCheckable="true"
                    app:startIconDrawable="@drawable/system_regular_90_lock_closed"
                    app:startIconTint="@color/white">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editTextConfirmPasswordRegister"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:backgroundTint="@android:color/transparent"
                        android:drawableTint="@color/sea_green"
                        android:hint="@string/reenter_password"
                        android:inputType="textPassword"
                        android:textColor="@color/white"
                        android:textColorHighlight="@color/sea_green" />
                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/btnRegister"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_marginTop="32dp"
                    android:backgroundTint="@color/sea_green"
                    android:text="@string/register"
                    android:textColor="@color/white" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="16dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textViewHaveAccount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:text="@string/have_an_account"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/textViewSignUp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="0"
                        android:clickable="true"
                        android:text="@string/sign_up"
                        android:textColor="@color/sea_green" />
                </LinearLayout>

                <ProgressBar
                    android:id="@+id/progressBarRegister"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="32dp"
                    android:indeterminateTint="@color/sea_green"
                    android:visibility="gone" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>